<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_color"
    android:layout_height="match_parent"
    tools:context=".AccomplishmentActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Your Volunteering Achievement"
        />

    <ProgressBar
        android:id="@+id/accomplishment_bar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="238dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:progress="70"
        android:layout_marginStart="80dp"
        android:progressDrawable="@drawable/circle"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="80dp" />

    <TextView
        android:id="@+id/textMarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0⭐"
        android:textSize="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="150dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="150dp" />

    <TextView
        android:id="@+id/howtogetstars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to get stars?:"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/accomplishment_bar"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/how1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1) Gain more stars when you attending any charity events"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="22dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/howtogetstars"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/how2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2) Each attended event will be rewarded as 10 stars"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="22dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/how1"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/how3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3) No stars will be given if you miss out the charity event"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="22dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/how2"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/how4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4) 100 ⭐achiever will get a mystery gift from the NFN"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="22dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/how3"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />

</RelativeLayout>